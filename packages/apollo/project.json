{
  "root": "packages/apollo",
  "sourceRoot": "packages/apollo",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/apollo/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/apollo"],
      "options": {
        "jestConfig": "packages/apollo/jest.config.js",
        "passWithNoTests": true
      }
    },
    "build-base": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/apollo",
        "tsConfig": "packages/apollo/tsconfig.lib.json",
        "packageJson": "packages/apollo/package.json",
        "main": "packages/apollo/bin/apollo.ts",
        "assets": ["packages/apollo/*.md"]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "npm run build:tools",
          "nx run apollo:build-base",
          "node ./dist/tools/chmod dist/packages/apollo/bin/apollo.js"
        ],
        "parallel": false
      }
    }
  }
}
