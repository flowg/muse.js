{
  "root": "packages/ng-sls",
  "sourceRoot": "packages/ng-sls/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/ng-sls/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ng-sls"],
      "options": {
        "jestConfig": "packages/ng-sls/jest.config.js",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nrwl/node:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ng-sls",
        "tsConfig": "packages/ng-sls/tsconfig.lib.json",
        "packageJson": "packages/ng-sls/package.json",
        "main": "packages/ng-sls/src/index.ts",
        "assets": [
          "packages/ng-sls/*.md",
          {
            "input": "./packages/ng-sls/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/ng-sls/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/ng-sls",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/ng-sls",
            "glob": "executors.json",
            "output": "."
          }
        ]
      },
      "configurations": {
        "e2e": {
          "updateBuildableProjectDepsInPackageJson": false
        }
      }
    },
    "build-e2e": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx run ng-sls:build:e2e --with-deps",
          "mkdir -p dist/node_modules/@muse.js",
          "cp -R dist/packages/ dist/node_modules/@muse.js"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx run ng-sls:build --with-deps",
          "npm publish dist/packages/ng-sls"
        ],
        "parallel": false
      }
    }
  }
}
